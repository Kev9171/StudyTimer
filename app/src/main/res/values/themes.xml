<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MPTIME.dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/base_gray</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorSurface">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MPTIME.light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_800</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/base_gray</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- dark themes [pink, purple, green, blue, red ] -->
    <style name="Theme.MPTIME.dark.pink" parent="Theme.MPTIME.dark">
        <item name="colorPrimary">@color/basic_pink</item>
    </style>
    <style name="Theme.MPTIME.dark.purple" parent="Theme.MPTIME.dark">
        <item name="colorPrimary">@color/basic_purple</item>
    </style>
    <style name="Theme.MPTIME.dark.green" parent="Theme.MPTIME.dark">
        <item name="colorPrimary">@color/basic_green</item>
    </style>
    <style name="Theme.MPTIME.dark.blue" parent="Theme.MPTIME.dark">
        <item name="colorPrimary">@color/basic_blue</item>
    </style>
    <style name="Theme.MPTIME.dark.red" parent="Theme.MPTIME.dark">
        <item name="colorPrimary">@color/basic_red</item>
    </style>


    <!-- light themes [pink, purple, green, blue, red ] -->
    <style name="Theme.MPTIME.light.pink" parent="Theme.MPTIME.light">
        <item name="colorPrimary">@color/basic_pink</item>
    </style>
    <style name="Theme.MPTIME.light.purple" parent="Theme.MPTIME.light">
        <item name="colorPrimary">@color/basic_purple</item>
    </style>
    <style name="Theme.MPTIME.light.green" parent="Theme.MPTIME.light">
        <item name="colorPrimary">@color/basic_green</item>
    </style>
    <style name="Theme.MPTIME.light.blue" parent="Theme.MPTIME.light">
        <item name="colorPrimary">@color/basic_blue</item>
    </style>
    <style name="Theme.MPTIME.light.red" parent="Theme.MPTIME.light">
        <item name="colorPrimary">@color/basic_red</item>
    </style>

</resources>