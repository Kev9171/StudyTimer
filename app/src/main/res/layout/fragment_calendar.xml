<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="?colorSurface"
    tools:context=".view.CalendarFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="D-day 캘린더"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <View
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:background="@color/base_purple"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="5dp"
        />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dateTextAppearance="@color/white"
        android:weekDayTextAppearance="?colorPrimary"
        android:background="@drawable/box_blue"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:id="@+id/addSchedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="일정이름: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="0dp"
                android:textColor="?colorOnPrimary"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorPrimary"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="상세일정: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/scheduleEdit"
                android:layout_width="0dp"
                android:textColor="?colorOnPrimary"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorPrimary"
                android:layout_weight="3" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/addScheduleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:text="일정 추가"
            android:padding="10dp"
            android:background="@drawable/box_purple"
            />
        <Button
            android:id="@+id/addBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:text="추가" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:text="취소" />

        <CheckBox
            android:id="@+id/dDayCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:textColor="?colorOnPrimary"
            android:buttonTint="?colorPrimary"
            android:text="D-Day 설정" />
    </LinearLayout>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/displaySchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/box_blue_outline"
            android:visibility="gone">

            <TextView
                android:id="@+id/scheduleDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="10dp"
                android:text=""
                android:textSize="20dp" />

            <TextView
                android:id="@+id/scheduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="20dp" />

            <TextView
                android:id="@+id/scheduleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:textSize="20dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/DdayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp" />

    </com.daimajia.swipe.SwipeLayout>




</LinearLayout>