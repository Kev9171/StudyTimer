<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyPlaceFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="나만의 공부 장소"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <View
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:background="@color/base_purple"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/addPlaceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_purple"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:text="+ 장소 추가하기"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_margin="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"/>

</LinearLayout>